<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg">

    <ScrollView
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="0.4">

            <com.status.videomaker.view.SetColorSeekBar
                android:id="@+id/text_color"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="2dp"
                android:layout_weight="0.1"
                android:padding="5dp"
                android:thumb="@drawable/colorseekbar_thumb" />

            <ImageView
                android:id="@+id/text_btn"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:src="@drawable/add_text_btn" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/text_scroll"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="0.3"
                android:orientation="horizontal" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/bold"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/bold_icon" />

                <ImageView
                    android:id="@+id/underline"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/underline_icon" />

                <ImageView
                    android:id="@+id/shadow"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/shadow_icon" />

                <ImageView
                    android:id="@+id/italic"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/shadow_icon" />

                <ImageView
                    android:id="@+id/capital"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    android:padding="3dp"
                    android:src="@drawable/shadow_icon" />
            </LinearLayout>
        </LinearLayout>

    </ScrollView>
</RelativeLayout>
