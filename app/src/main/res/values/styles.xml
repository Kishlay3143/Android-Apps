<?xml version="1.0" encoding="utf-8"?>

<resources>


    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@android:color/white</item>

    </style>

    <style name="dialog" parent="@style/Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/black</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="PopupMenu" parent="@android:style/Widget.PopupMenu">
        <item name="android:popupBackground">@android:color/white</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="CustomDialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateVisible|adjustResize</item>
    </style>

    <style name="dialog_title_style">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ThemeOverlay.Searching" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Text color -->
        <item name="android:editTextColor">@color/black</item>
        <!-- Hint text color -->
        <item name="android:textColorHint">#9C9898</item>
    </style>
</resources>